<?xml version="1.0" encoding="utf-8"?>
<!-- Interface d'assistance mÃ©dicale avec RelativeLayout imbriquÃ©s -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- ========== EN-TÃŠTE ========== -->
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:background="#2196F3"
        android:padding="16dp">

        <!-- Logo application -->
        <TextView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="ðŸ¥"
            android:textSize="24sp" />

        <!-- Titre application -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Autonomous Agent"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Bouton profil -->
        <Button
            android:id="@+id/profileButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:drawable/ic_menu_my_calendar"
            android:backgroundTint="#FFFFFF" />

    </RelativeLayout>

    <!-- ========== CARTE PATIENT ========== -->
    <RelativeLayout
        android:id="@+id/patientCard"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@id/headerLayout"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="4dp">

        <!-- Photo patient -->
        <ImageView
            android:id="@+id/patientPhoto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_my_calendar"
            android:background="#E3F2FD"
            android:padding="8dp" />

        <!-- Informations patient -->
        <TextView
            android:id="@+id/patientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/patientPhoto"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:text="Dr. Virtual"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/patientAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/patientPhoto"
            android:layout_below="@id/patientName"
            android:layout_marginStart="16dp"
            android:text="45 ans"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/patientId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/patientPhoto"
            android:layout_below="@id/patientAge"
            android:layout_marginStart="16dp"
            android:text="ID: PAT-7842"
            android:textColor="#666666"
            android:textSize="12sp" />

        <!-- Statut urgence -->
        <TextView
            android:id="@+id/emergencyStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="#FF5252"
            android:padding="8dp"
            android:text="URGENT"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <!-- DerniÃ¨re consultation -->
        <TextView
            android:id="@+id/lastVisit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/emergencyStatus"
            android:text="15 Nov 2024"
            android:textColor="#999999"
            android:textSize="12sp" />

    </RelativeLayout>

    <!-- ========== VITAL SIGNS ========== -->
    <RelativeLayout
        android:id="@+id/vitalSignsLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/patientCard"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="2dp">

        <TextView
            android:id="@+id/vitalSignsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="SIGNAUX VITAUX"
            android:textColor="#2196F3"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- FrÃ©quence cardiaque -->
        <RelativeLayout
            android:id="@+id/heartRateLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/bpLayout"
            android:layout_below="@id/vitalSignsTitle"
            android:layout_marginTop="16dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/heartRateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="72"
                android:textColor="#4CAF50"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/heartRateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/heartRateValue"
                android:layout_centerHorizontal="true"
                android:text="BPM"
                android:textColor="#666666"
                android:textSize="12sp" />

        </RelativeLayout>

        <!-- Pression artÃ©rielle -->
        <RelativeLayout
            android:id="@+id/bpLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/vitalSignsTitle"
            android:layout_marginTop="16dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/bpValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="120/80"
                android:textColor="#FF9800"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bpLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bpValue"
                android:layout_centerHorizontal="true"
                android:text="mmHg"
                android:textColor="#666666"
                android:textSize="12sp" />

        </RelativeLayout>

        <!-- TempÃ©rature -->
        <RelativeLayout
            android:id="@+id/tempLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/bpLayout"
            android:layout_below="@id/vitalSignsTitle"
            android:layout_marginTop="16dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/tempValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="36.8"
                android:textColor="#2196F3"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tempLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tempValue"
                android:layout_centerHorizontal="true"
                android:text="Â°C"
                android:textColor="#666666"
                android:textSize="12sp" />

        </RelativeLayout>

    </RelativeLayout>

    <!-- ========== ACTIONS RAPIDES ========== -->
    <RelativeLayout
        android:id="@+id/quickActionsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vitalSignsLayout"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="2dp">

        <TextView
            android:id="@+id/quickActionsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="ACTIONS RAPIDES"
            android:textColor="#2196F3"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- PremiÃ¨re ligne d'actions -->
        <RelativeLayout
            android:id="@+id/actionsRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/quickActionsTitle"
            android:layout_marginTop="16dp">

            <!-- Bouton Dossier MÃ©dical -->
            <Button
                android:id="@+id/medicalRecordButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/prescriptionButton"
                android:layout_marginEnd="8dp"
                android:text="ðŸ“‹\nDossier"
                android:padding="5dp"
                android:textSize="12sp"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:gravity="center" />

            <!-- Bouton Prescription -->
            <Button
                android:id="@+id/prescriptionButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_toStartOf="@id/labResultsButton"
                android:layout_marginEnd="8dp"
                android:text="ðŸ’Š\nOrdonnance"
                android:textSize="12sp"
                android:backgroundTint="#FF9800"
                android:textColor="#FFFFFF"
                android:gravity="center" />

            <!-- Bouton RÃ©sultats Lab -->
            <Button
                android:id="@+id/labResultsButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:text="ðŸ”¬\nLabo"
                android:textSize="12sp"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:gravity="center" />

        </RelativeLayout>

        <!-- DeuxiÃ¨me ligne d'actions -->
        <RelativeLayout
            android:id="@+id/actionsRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/actionsRow1"
            android:layout_marginTop="8dp">

            <!-- Bouton Urgence -->
            <Button
                android:id="@+id/emergencyButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/appointmentButton"
                android:layout_marginEnd="8dp"
                android:text="ðŸš¨\nUrgence"
                android:textSize="12sp"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF"
                android:gravity="center" />

            <!-- Bouton Rendez-vous -->
            <Button
                android:id="@+id/appointmentButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:text="ðŸ“…\nRDV"
                android:textSize="12sp"
                android:backgroundTint="#9C27B0"
                android:textColor="#FFFFFF"
                android:gravity="center" />

        </RelativeLayout>

    </RelativeLayout>

    <!-- ========== ALERTES ========== -->
    <RelativeLayout
        android:id="@+id/alertsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/quickActionsLayout"
        android:layout_above="@id/bottomNav"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#FFF3E0"
        android:padding="16dp"
        android:elevation="2dp">

        <!-- IcÃ´ne alerte -->
        <TextView
            android:id="@+id/alertIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="âš ï¸"
            android:textSize="20sp" />

        <!-- Message alerte -->
        <TextView
            android:id="@+id/alertMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/alertIcon"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:text="Allergie: Penicilline\nDerniÃ¨re mise Ã  jour: 10 Nov 2024"
            android:textColor="#E65100"
            android:textSize="14sp" />

        <!-- Bouton voir dÃ©tails -->
        <Button
            android:id="@+id/viewDetailsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Voir"
            android:textSize="12sp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

    <!-- ========== NAVIGATION BAS ========== -->
    <RelativeLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <!-- Accueil -->
        <Button
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/navPatients"
            android:text="ðŸ \nAccueil"
            android:textSize="10sp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:gravity="center" />

        <!-- Patients -->
        <Button
            android:id="@+id/navPatients"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/navCalendar"
            android:text="ðŸ‘¥\nPatients"
            android:textSize="10sp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:gravity="center" />

        <!-- Calendrier -->
        <Button
            android:id="@+id/navCalendar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/navSettings"
            android:text="ðŸ“…\nPlanning"
            android:textSize="10sp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:gravity="center" />

        <!-- ParamÃ¨tres -->
        <Button
            android:id="@+id/navSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:text="âš™ï¸\nParamÃ¨tres"
            android:textSize="10sp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:gravity="center" />

    </RelativeLayout>

</RelativeLayout>